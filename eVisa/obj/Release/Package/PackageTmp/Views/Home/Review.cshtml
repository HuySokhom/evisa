@{
    ViewBag.Title = "Review";
}

<div class="content">
    <div class="container">
        <div class="row bs-wizard" style="border-bottom:0;">
            <div class="col-xs-3 bs-wizard-step complete">
                <div class="text-center bs-wizard-stepnum">Apply</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
            </div>

            <div class="col-xs-3 bs-wizard-step complete">
                <!-- complete -->
                <div class="text-center bs-wizard-stepnum">Application</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
            </div>

            <div class="col-xs-3 bs-wizard-step complete">
                <!-- complete -->
                <div class="text-center bs-wizard-stepnum">Review</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
            </div>

            <div class="col-xs-3 bs-wizard-step">
                <!-- active -->
                <div class="text-center bs-wizard-stepnum">Payment</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
            </div>
        </div>
        <h1>Review</h1>
        <p>Please double check your applications before proceeding to the payment page.</p>
        <button data-ng-disabled="applicationViews.length == 9" class="btn" data-toggle="modal" data-target=".apply_popup">
            <i class="fa fa-plus-square"></i>
            <span data-ng-show="applicationViews.length != 9">
                Apply More Application
            </span>
            <span data-ng-show="applicationViews.length == 9">
                Limit 9 Application
            </span>
        </button>
        <button class="btn" onclick="window.location.href='/Home/PaymentCon'">
            <i class="fa fa-arrow-circle-right"></i>
            Continue & Payment
        </button>
        <table data-ng-repeat="item in applicationViews">
            <tr>
                <td valign="top" width="170">
                    <img src="~/Images/avatar.png" width="160" height="170" />
                    <div class="reviewTitle">Surname</div>
                    <div>{{Surname}}</div>
                    <div class="reviewTitle">Middle Name</div>
                    <div>{{MiddleName}}</div>
                    <div class="reviewTitle">Given Name</div>
                    <div>{{GivenName}}</div>
                    <div>
                        <span class="reviewTitle">Age:</span> {{Age}}
                        <span class="reviewTitle">, Sex:</span> {{Sex}}
                    </div>

                </td>
                <td valign="top" width="170">
                    <div class="reviewTitle">Nationality</div>
                    <div>{{Nationality}}</div>
                    <div class="reviewTitle">Country of Birth</div>
                    <div>{{Region}}</div>
                    <div class="reviewTitle">Date of Birth</div>
                    <div>{{DOB}}</div>
                    <div class="reviewTitle">Nationality</div>
                    <div>{{Nationality}}</div>
                    <div class="reviewTitle">Passport Number</div>
                    <div>{{PassportNumber}}</div>
                    <div class="reviewTitle">Issuing Country</div>
                    <div>{{IssuingCountry}}</div>
                    <div class="reviewTitle">Issuing Date</div>
                    <div>{{IssuingDate}}</div>
                    <div class="reviewTitle">Expiry Date</div>
                    <div>{{ExpiryDate}}</div>
                </td>
                <td valign="top">
                    <div class="reviewTitle">Entry Date to Cambodia</div>
                    <div>{{EntryDate}}</div>
                    <div class="reviewTitle">Port of Entry</div>
                    <div>{{PortOfEntry}}</div>
                    <div class="reviewTitle">Residential Address</div>
                    <div>{{ResidentialAddress}}</div>
                    <div class="reviewTitle">Mod of Travelling</div>
                    <div>{{ModOfTravel}}</div>
                    <div class="reviewTitle">Arrival Vehicle No</div>
                    <div>{{ArrivalVehicleNo}}</div>
                    <div class="reviewTitle">Arrival Time</div>
                    <div>{{ArrivalTime}}</div>
                    <div class="reviewTitle">Address During Visit</div>
                    <div>{{AddressDuringVisit}}</div>
                    <div class="reviewTitle">Organization, Persons to be visited</div>
                    <div>{{Organization}}</div>
                </td>
                <td width="240px" style="vertical-align: top;">
                    <button class="btn" data-ng-click="editReview(applicationViews);">
                        <i class="fa fa-edit"></i>
                        Edit
                    </button>
                    <button class="btn" data-ng-click="removeApp($index);">
                        <i class="fa fa-trash"></i>
                        Delete
                    </button>
                </td>
            </tr>
        </table>
        <br /><br />
    </div>
</div>

<div 
    class="modal fade apply_popup" 
    tabindex="-1" 
    data-keyboard="false"
    data-backdrop="static" 
    role="dialog" 
    data-ng-cloak
>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-ng-click="closeAppForm();" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                Apply More Application
            </div>
            <div class="modal-body">
                <div data-ng-show="delete">
                    @Html.Partial("~/Views/Home/ApplicationFormPartial.cshtml")
                </div>
                <div data-ng-show="!delete" style="height:75px;">
                    <p>
                        <i class="fa fa-hand-o-right" aria-hidden="true"></i>
                        Are you sure want to delete this application form?
                    </p>
                    <div style="float:right;">
                        <button class="btn" data-ng-click="closeAppForm();" data-dismiss="modal">Cancel</button>
                        <button type="button" data-ng-click="deleteApplicationForm();" class="btn btn-primary"><i class="fa fa-check-square"></i>Ok</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer" data-ng-show="delete">
                <button class="btn" data-ng-click="closeAppForm();" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-ng-click="addMoreApplication();"><i class="fa fa-save"></i>Save</button>
            </div>
        </div>
    </div>
</div>