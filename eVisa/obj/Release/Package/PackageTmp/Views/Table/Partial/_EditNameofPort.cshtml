@model eVisa.ViewModel.NameofPortView

@using (Html.BeginForm("EditNameofPort", "Table", FormMethod.Post, new { @class = "form-horizontal", role = "form", @Id = "frmEdit" }))
{

    <div class="row">
        <div class="col-md-12">
            <div class="modal-content">
                <div class="panel-heading modal-header">
                    <h4 class="modal-title"> Edit </h4>
                </div>
                <div class="row modal-body  ">
                    <div class="col-md-12">
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.Language_Code)
                        <fieldset disabled>
                            <div class="form-group">
                                <div class="col-md-3">
                                    @Html.LabelFor(m => m.Language_Code)
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(m => m.Language_Code, Model.LanguageList, new { @class = "form-control" })
                                </div>
                            </div>
                        </fieldset>
                        
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Name)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Name, Model.Name, new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Border)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Border, Model.Border, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Entry)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Entry, Model.Entry, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Exit)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Exit, Model.Exit, new { @class = "form-control" })
                            </div>
                        </div>

                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" name="save" value="save">
                        <span class="glyphicon glyphicon-ok"></span>
                        Save
                    </button>

                </div>

            </div>


        </div>
    </div>
}

