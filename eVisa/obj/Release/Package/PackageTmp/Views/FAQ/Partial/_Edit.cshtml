
@model eVisa.ViewModel.FAQView

@using (Html.BeginForm("Edit", "FAQ", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form", @Id = "frmEdit" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="modal-content">
                <div class="panel-heading modal-header">
                    <h4 class="modal-title"> Edit </h4>
                </div>
                <div class="row modal-body  ">
                    @Html.HiddenFor( m => m.Id)
                    @Html.HiddenFor( m => m.Language_Code)
                    <fieldset disabled>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Language_Code, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(m => m.Language_Code, Model.LanguageList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Language_Code)
                            </div>
                        </div>
                    </fieldset>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.question, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.question, 5, 30, new { @class = "form-control", placeholder = "question" })
                            @Html.ValidationMessageFor(m => m.question)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.answer, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.answer, 5, 30, new { @class = "form-control", placeholder = "answer" })
                            @Html.ValidationMessageFor(m => m.answer)
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success" name="save" value="save">
                        <span class="glyphicon glyphicon-ok"></span>
                        Save
                    </button>

                </div>
            </div>

        </div>


    </div>

}

